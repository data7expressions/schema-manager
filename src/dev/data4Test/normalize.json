      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "/draft2020-12/ref-and-id1/base.json",
      "$ref": "int.json",
      "$defs": {
        "bigint": {
          "$comment": "canonical uri: /ref-and-id1/int.json",
          "$id": "int.json",
          "maximum": 10
        },
        "smallint": {
          "$comment": "canonical uri: /ref-and-id1-int.json",
          "$id": "/draft2020-12/ref-and-id1-int.json",
          "maximum": 2
