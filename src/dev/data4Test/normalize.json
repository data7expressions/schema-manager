        "bigint": {
          "maximum": 10,
          "$id": "/draft2020-12/ref-and-id2/base.json#bigint"
        },
        "smallint": {
          "$id": "draft2020-12/draft2020-12/ref-and-id2#bigint",
          "maximum": 2
        }
      }
    }
